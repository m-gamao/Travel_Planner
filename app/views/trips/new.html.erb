<h3>Create a Trip</h3>
<br>
<% if flash[:message] %>
  <%= flash[:message] %>
  <% end %>
  
<%= form_with model: @trip do |f| %>
    
  Trip Name: <%= f.text_field :name %><br><br>
  Start Date: <%= f.date_field :start_date %>
  End Date: <%= f.date_field :end_date %><br><br>
  <%= f.label :choose_a_destination %>: 
  <%= f.collection_select(:destination_ids, Destination.all, :id, :name, prompt: true) %>
  <br>
  <br>
  
  <%= f.submit %>

<% end %>
<br>