<h3>Create a Trip</h3>
<br>
<% if flash[:message] %>
  <%= flash[:message] %>
  <% end %>
  
<%= form_for @trip do |f| %>
    
  Trip Name: <%= f.text_field :name %><br><br>
  Start Date: <%= f.date_field :start_date %>
  End Date: <%= f.date_field :end_date %><br><br>
  <%= collection_select(:destination, Destination.all, :name, :name) %>
  
  <%= f.submit %>

<% end %>
